										                AccelerationRatio=".3"
										                DecelerationRatio=".3"
										                To="{StaticResource MDH.Palette.Grey.200}"/>
									</Storyboard>
								</BeginStoryboard>
							</DataTrigger.EnterActions>
							<DataTrigger.ExitActions>
